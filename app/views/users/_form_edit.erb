<div class="row ml-0">
  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group">
      <b><%= form.label :user_name %></b>
      <%= form.text_field :user_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <b><%= form.label :first_name %></b>
      <%=form.text_field :first_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <b><%= form.label :last_name %></b>
      <%=form.text_field :last_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <b><%= form.label "Biography" %></b>
      <%= form.text_area :bio, class: "form-control" %>
    </div>
    <div class="form-group">
      <b> <%= form.label :avatar %></b>
      <%= form.file_field :avatar, class: "form-control-file"%>
    </div>
    <div class="form-group">
      <b><%= form.label :address %></b>
      <%= form.text_field :address, class: "form-control"%>
    </div>
    <div class="form-group"></b>
      <b><%= form.label :phone %>
      <%=form.text_field :phone, class:"form-control" %>
    </div>
    <div class="form-group"></b>
      <%=form.text_field :email, class:"form-control", hidden: true %>
    </div>
    <div class="form-group"></b>
      <%=form.check_box :admin, required: false, hidden: true%>
    </div>
    <div class="form-group mt-2">
      <%= form.button :submit, class: ["btn", "btn-primary"] %>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
  <% end %>
</div>