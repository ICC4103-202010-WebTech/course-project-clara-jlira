<div class="p-2 "></div>
<h1>Administration View</h1>
<div class="p-2 "></div>
<div class="container">
  <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="<%= admin_events_admin_path %>">Events</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="<%= admin_organizations_admin_path %>">Organizations</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="<%= admin_events_comments_admin_path %>">Events Comments</a>
      </li>
    </ul>
  </nav>
  <table class="table">
    <thead>
    <tr>
      <th>Comment ID</th>
      <th>Created_at</th>
      <th>Updated_at</th>
      <th>User ID</th>
      <th>Event ID</th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
    </thead>
    <tbody>
    <% @comments.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.created_at %></td>
        <td><%= event.updated_at %></td>
        <td><%= event.user_id %></td>
        <td><%= event.event_id %></td>
        <td><%= link_to "View", comment_path(event.id), class: ["btn", "btn-primary"] %><td>
        <td><%= link_to "Edit", edit_comment_path(event.id), class: ["btn", "btn-primary"] %><td>
        <td><%= link_to "Delete", comment_path(event.id) , method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: ["btn", "btn-primary"] %><td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "Create", new_comment_path, class: ["btn", "btn-primary"] %>
</div>