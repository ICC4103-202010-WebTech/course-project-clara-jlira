<p id="notice"><%= notice %></p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.message %></td>
        <td><%= link_to "Invitation", Invitation.where('id = ?',message.invitation_id)[0] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
