<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table width="50%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
      <th>Location</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= organization.contact %></td>
        <td><%= organization.location %></td>
        <td><%= link_to 'Show', organization %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
