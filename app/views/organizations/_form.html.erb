<div class="row ml-0">
  <%= simple_form_for @organization do |form| %>
    <div class="form-group">
      <b><%= form.label :name %></b>
      <%=form.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <b><%= form.label :description %></b>
      <%=form.text_field :description, class:"form-control" %>
    </div>
    <div class="form-group">
      <b> <%= form.label :pictures %></b>
      <%= form.file_field :pictures, class: "form-control-file"%>
    </div>
    <div class="form-group">
      <b> <%= form.label :files %></b>
      <%= form.file_field :file, class: "form-control-file"%>
    </div>
    <div class="form-group">
      <b><%= form.label :contact %></b>
      <%=form.text_field :contact, class:"form-control" %>
    </div>
    <div class="form-group">
      <b><%= form.label :location %></b>
      <%=form.text_field :location, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "submit", class: ["btn", "btn-primary"] %>
      <%= link_to "Back", organization_path(@organization.id), class: ["btn", "btn-primary"] %>
    </div>
  </div>
  <% end %>
  </div>